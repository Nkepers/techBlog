<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input class="border-primary" name="post-title" type="text" value="{{post.title}}" />
            <input class="border-primary mt-2" name="post-text" type="text" value="{{post.post_text}}">{{post.post_text}}</input>
        </div>
        <button type="submit" class="rounded border-primary mt-2">Save post</button>
        <button type="button" class="rounded border-primary delete-post-btn">Delete post</button>
    </form>
</article>

